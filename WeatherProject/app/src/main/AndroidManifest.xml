            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity  android:name=".PrefActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar" >
        </activity>
    </application>

